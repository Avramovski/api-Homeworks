@model EditBurgerVm


<h2>Edit Burger</h2>

<form asp-action="EditBurger" method="post">
    <input type="hidden" asp-for="Id"  />


    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Price" class="control-label"></label>
        <input asp-for="Price" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="IsVegetarian" class="control-label"></label>
        <select asp-for="IsVegetarian" class="form-control">
            <option value="">Select...</option>
            <option value="Yes">Yes</option>
            <option value="No">No</option>
        </select>
        <span asp-validation-for="IsVegetarian" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="IsVegan" class="control-label"></label>
        <select asp-for="IsVegan" class="form-control">
            <option value="">Select...</option>
            <option value="Yes">Yes</option>
            <option value="No">No</option>
        </select>
        <span asp-validation-for="IsVegan" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="HasFries" class="control-label"></label>
        <select asp-for="HasFries" class="form-control">
            <option value="">Select...</option>
            <option value="Yes">Yes</option>
            <option value="No">No</option>
        </select>
        <span asp-validation-for="HasFries" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Save Changes" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>
