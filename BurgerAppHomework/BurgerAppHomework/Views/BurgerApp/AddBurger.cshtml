@model Dtos.ViewModels.CreateBurgerVM

@{
    ViewBag.Title = "Add New Burger";
}

<h2>Add New Burger</h2>

<form asp-action="AddBurger" method="post">
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Price" class="control-label"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="form-group">
    <label asp-for="IsVegetarian" class="control-label"></label>
    <div class="form-check">
        <input asp-for="IsVegetarian" class="form-check-input" type="radio" value="No" />
        <label class="form-check-label" for="IsVegetarian_No">No</label>
    </div>
    <div class="form-check">
        <input asp-for="IsVegetarian" class="form-check-input" type="radio" value="Yes" />
        <label class="form-check-label" for="IsVegetarian_Yes">Yes</label>
    </div>
    <span asp-validation-for="IsVegetarian" class="text-danger"></span>
</div>

<div class="form-group">
    <label asp-for="IsVegan" class="control-label"></label>
    <div class="form-check">
        <input asp-for="IsVegan" class="form-check-input" type="radio" value="No" />
        <label class="form-check-label" for="IsVegan_No">No</label>
    </div>
    <div class="form-check">
        <input asp-for="IsVegan" class="form-check-input" type="radio" value="Yes" />
        <label class="form-check-label" for="IsVegan_Yes">Yes</label>
    </div>
    <span asp-validation-for="IsVegan" class="text-danger"></span>
</div>

<div class="form-group">
    <label asp-for="HasFries" class="control-label"></label>
    <div class="form-check">
        <input asp-for="HasFries" class="form-check-input" type="radio" value="No" />
        <label class="form-check-label" for="HasFries_No">No</label>
    </div>
    <div class="form-check">
        <input asp-for="HasFries" class="form-check-input" type="radio" value="Yes" />
        <label class="form-check-label" for="HasFries_Yes">Yes</label>
    </div>
    <span asp-validation-for="HasFries" class="text-danger"></span>
</div>



    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">
            @ViewBag.Error
        </div>
    }
    <div class="form-group">
        <input type="submit" value="Add Burger" class="btn btn-primary" />
    </div>
</form>



