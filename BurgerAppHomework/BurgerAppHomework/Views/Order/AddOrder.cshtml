@model CreateOrderVm

@{
    ViewBag.Title = "Add Order";
}

<h2>Add Order</h2>

<form asp-action="AddOrder" method="post">
    <div class="form-group">
        <label asp-for="FullName"></label>
        <input asp-for="FullName" class="form-control" />
        <span asp-validation-for="FullName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Address"></label>
        <input asp-for="Address" class="form-control" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="IsDelivered"></label>
        <select asp-for="IsDelivered" class="form-control">
            <option value="false">Not Delivered</option>
            <option value="true">Delivered</option>
        </select>
        <span asp-validation-for="IsDelivered" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Location"></label>
        <input asp-for="Location" class="form-control" />
        <span asp-validation-for="Location" class="text-danger"></span>
    </div>

 <div class="form-group">
    <label>Burgers</label>
    
    @if (Model.BurgerId != null)
    {
        @foreach (var burger in Model.Burgers)
        {
            <div class="form-check">
                <input class="form-check-input" type="checkbox" name="selectedBurgers" value="@burger.Id" />
                <label class="form-check-label">
                    @burger.Name
                </label>
            </div>
        }
    }
    else
    {
        <p>No burgers available.</p>
    }
    
    <span asp-validation-for="Burgers" class="text-danger"></span>
</div>

    <button type="submit" class="btn btn-primary">Add Order</button>
</form>
