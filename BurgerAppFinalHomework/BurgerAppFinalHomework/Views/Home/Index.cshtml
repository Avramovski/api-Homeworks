@model Dtos.ViewModels.HomeViewModel

<h2>Welcome to the Burger Place</h2>

<div>
    <h3>Most Popular Burger</h3>
    <p>@Model.MostPopularBurger?.Name ?? "No orders yet"</p>
</div>

<div>
    <h3>Total Orders</h3>
    <p>@Model.TotalOrders</p>
</div>

<div>
    <h3>Average Order Price</h3>
    <p>@Model.AverageOrderPrice:C</p>
</div>

<div>
    <h3>Locations</h3>
    <ul>
        @foreach (var location in Model.Locations)
        {
            <li>@location.Name - @location.Address (Opens at: @location.OpensAt, Closes at: @location.ClosesAt)</li>
        }
    </ul>
</div>
